{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "webpack://wordfall-web/index.js",
          "path": "${workspaceFolder}/index.js"
        },
        {
          "url": "webpack://wordfall-web/src/js",
          "path": "${workspaceFolder}/src/js"
        },
      ],
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js"
      ]
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}

